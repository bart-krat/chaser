// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  phone           String?
  company         String?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  chasers         Chaser[]
}

model Chaser {
  id              String   @id
  task            String
  documents       String
  who             String   // Kept for legacy, but customerId is primary now
  urgency         String
  customerId      String?  // Reference to Customer table
  contactName     String   // Deprecated, use customer.name
  contactEmail    String?  // Deprecated, use customer.email
  contactPhone    String?  // Deprecated, use customer.phone
  status          String   // 'pending' | 'scheduled' | 'in_progress' | 'completed' | 'failed'
  currentAttempt  Int      @default(0)
  maxAttempts     Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  nextOutreachAt  DateTime?
  completedAt     DateTime?
  
  customer        Customer? @relation(fields: [customerId], references: [id])
  schedule        OutreachSchedule[]
  
  @@index([customerId])
  @@index([status])
}

model OutreachSchedule {
  id                String   @id
  chaserId          String
  attemptNumber     Int
  medium            String   // 'email' | 'whatsapp' | 'call' | 'sms'
  scheduledFor      DateTime
  status            String   // 'pending' | 'sent' | 'delivered' | 'failed' | 'responded'
  content           String
  template          String
  sentAt            DateTime?
  deliveredAt       DateTime?
  responseReceived  Boolean  @default(false)
  messageId         String?  // Gmail Message-ID for email threading
  threadId          String?  // Gmail Thread-ID
  metadata          String?  // JSON string for additional data
  
  chaser            Chaser   @relation(fields: [chaserId], references: [id], onDelete: Cascade)
  
  @@index([chaserId])
  @@index([scheduledFor, status])
}
